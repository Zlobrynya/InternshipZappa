<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="165dp"
                                             android:layout_height="230dp">

    <android.support.constraint.ConstraintLayout
            android:layout_width="152dp"
            android:layout_height="210dp" android:background="@drawable/rect_recom_dish"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="4dp">

        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:background="@drawable/layout_bg"
            app:cardBackgroundColor="@color/color_app"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/topingPhoto"
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:background="@drawable/no_toping"
                android:scaleType="centerCrop"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></ImageView>

            <ProgressBar
                android:id="@+id/progressBar2"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="52dp"
                android:layout_marginTop="20dp"
                android:indeterminateDrawable="@drawable/spinner_ring"
                android:indeterminateOnly="true"
                tools:layout_editor_absoluteX="96dp"
                tools:layout_editor_absoluteY="16dp" />

        </android.support.v7.widget.CardView>

        <TextView
                android:text="@string/no_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/topingName" android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/cardView"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="14sp"
                android:textColor="#FFFFFF" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:textStyle="bold"/>
        <TextView
                android:text=""
                android:layout_width="117dp"
                android:layout_height="wrap_content"
                android:id="@+id/topingVes"
                android:textSize="12sp"
                android:textColor="#B2FFFFFF"
                app:layout_constraintTop_toBottomOf="@+id/topingName"
                app:layout_constraintStart_toStartOf="@+id/topingName"
                app:layout_constraintEnd_toEndOf="@+id/topingName" app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/topingPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/no_price"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topingVes"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
                android:text="@string/default_num"
                android:layout_width="25dp"
                android:layout_height="26dp"
                android:id="@+id/tvCounter" android:textColor="@color/white"
                android:textAlignment="center" android:visibility="gone"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>