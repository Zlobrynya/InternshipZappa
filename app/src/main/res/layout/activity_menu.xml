<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <android.support.design.widget.TabLayout
            android:id="@+id/sliding_tabs"
            android:layout_width="360dp"
            android:layout_height="93dp"
            app:tabMode="scrollable" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:layout_marginEnd="8dp" android:layout_marginStart="8dp"/>

    <android.support.v4.view.ViewPager
            android:id="@+id/viewPagerMenu"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/sliding_tabs">
    </android.support.v4.view.ViewPager>


</android.support.constraint.ConstraintLayout>