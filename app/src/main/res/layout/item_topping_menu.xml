<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:layout_width="328dp"
            android:layout_height="76dp"
            android:id="@+id/toppingCard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="23dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:scaleType="fitXY" android:layout_marginBottom="2dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.125" android:layout_marginTop="4dp"
            app:cardBackgroundColor="@color/color_primary">

        <TextView
                android:id="@+id/nameTopping"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:layout_width="196dp"
                android:layout_height="24dp"
                android:textSize="20sp"
                android:textColor="@color/white"/>
        <TextView
                android:id="@+id/weightTopping"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:layout_width="135dp"
                android:textSize="12sp"
                android:layout_height="15dp"
                android:textColor="#99FFFFFF"
        />
        <TextView
                android:id="@+id/priceTopping"
                android:layout_marginStart="16dp"
                android:layout_marginTop="49dp"
                android:layout_width="46dp"
                android:textSize="16sp"
                android:layout_height="20dp"
                android:textColor="@color/white"
        />
        <Button
                android:id="@+id/addButton"
                android:text="@string/add"
                android:textColor="@color/white"
                android:layout_width="100dp"
                android:layout_height="28dp"
                android:background="@drawable/button_border"
                android:layout_marginStart="224dp"
                android:layout_marginTop="45dp"

        />
        <FrameLayout
                     android:id="@+id/counterOn"
                     android:layout_width="84dp"
                     android:layout_height="28dp"
                     android:layout_marginStart="232dp"
                     android:layout_marginTop="45dp"
                     android:visibility="gone"
                     >
            <Button
                    android:id="@+id/plusButton"
                    android:text="@string/plus"
                    android:textColor="@color/white"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="56dp"
                    android:textSize="20sp"
                    android:background="@drawable/button_border"
            />
            <TextView
                    android:id="@+id/counter"
                    android:layout_marginStart="28dp"
                    android:layout_width="28dp"
                    android:textSize="20sp"
                    android:text="@string/default_num"
                    android:layout_height="28dp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
            />
            <Button
                    android:id="@+id/minusButton"
                    android:text="@string/munis"
                    android:textColor="@color/white"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@drawable/button_border"
                    android:textSize="20sp"
            />
        </FrameLayout>

        <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent"
                     android:background="@drawable/card_border">
        </FrameLayout>

    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>