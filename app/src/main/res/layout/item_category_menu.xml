<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

        <Button
                android:id="@+id/dishButton"
                android:layout_width="301dp"
                android:layout_height="130dp"
                android:background="@drawable/dish"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="73dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:textColor="#FFFFFF"

                android:layout_marginStart="73dp"/>

        <android.support.v7.widget.CardView
                android:layout_width="301dp" android:layout_height="130dp"
                android:id="@+id/shapeDish"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="73dp"
                android:layout_marginEnd="73dp"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/dishButton"
                app:layout_constraintVertical_bias="0.0">


                <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:id="@+id/descDish"
                        android:textColor="#000000"
                        android:textSize="14dp"
                        style="@style/textDish" android:textAlignment="center" app:layout_constraintHorizontal_bias="0.49"
                        app:layout_constraintVertical_bias="0.651"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:id="@+id/weightDish"
                        android:layout_marginTop="65dp"
                        android:textColor="#000000"
                        android:textSize="12dp"
                        style="@style/textDish" android:textAlignment="center" app:layout_constraintHorizontal_bias="0.49"
                        app:layout_constraintVertical_bias="0.651"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:id="@+id/priceDish"
                        android:layout_marginTop="85dp"
                        android:textColor="#000000"
                        android:textSize="26dp"
                        style="@style/textDish" android:textAlignment="center" app:layout_constraintHorizontal_bias="0.49"
                        app:layout_constraintVertical_bias="0.651"/>
        </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>