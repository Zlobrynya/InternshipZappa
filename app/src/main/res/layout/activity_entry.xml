<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EntryActivity">

    <TextView
            android:text="Авторизация"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
    </TextView>

    <TextView
            android:text="Введите E-mail"
            android:layout_marginTop="168dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="40dp" android:id="@+id/textView4">
    </TextView>

    <EditText
            android:id="@+id/etEmailEntry"
            android:inputType="textEmailAddress"
            android:layout_marginTop="140dp"
            android:layout_width="239dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginRight="124dp"
            app:layout_constraintStart_toEndOf="@+id/textView4" android:layout_marginStart="8dp">
    </EditText>

    <TextView
            android:text="Введите пароль"
            android:layout_marginTop="252dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="32dp" android:id="@+id/textView5">
    </TextView>

    <EditText
            android:id="@+id/etPasswordEntry"
            android:inputType="textPassword"
            android:layout_marginTop="224dp"
            android:layout_width="231dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginRight="184dp"
            app:layout_constraintStart_toEndOf="@+id/textView5" android:layout_marginStart="16dp">
    </EditText>

    <Button
            android:id="@+id/btnReg"
            android:text="Войти"
            android:layout_marginTop="324dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="40dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="236dp">
    </Button>

    <Button
            android:onClick="ChangeActivityReg"
            android:id="@+id/btnChangeEntry"
            android:text="Регистрация"
            android:layout_marginTop="404dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="144dp">
    </Button>

    <Button
            android:onClick="ChangeActivityMenu"
            android:id="@+id/btnChangeMenu"
            android:text="Меню"
            android:layout_marginTop="324dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/btnReg"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent">
    </Button>
</android.support.constraint.ConstraintLayout>