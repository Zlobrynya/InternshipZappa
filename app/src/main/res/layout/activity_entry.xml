<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.AuthorizationActivity">

    <TextView
            android:text="Авторизация"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="92dp"
            app:layout_constraintHorizontal_bias="0.479" android:id="@+id/textView7">
    </TextView>

    <Button
            android:id="@+id/btnEnter"
            android:text="Войти"
            android:layout_marginTop="56dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp">
    </Button>

    <Button
            android:id="@+id/btnChangeEntry"
            android:text="Регистрация"
            android:onClick="startActivityReg"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/btnEnter" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp">
    </Button>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/textView7"
            app:layout_constraintHorizontal_bias="0.0" android:id="@+id/linearLayout">
        <TextView
                android:text="Введите E-mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4" tools:layout_editor_absoluteY="567dp" tools:layout_editor_absoluteX="76dp">
        </TextView>
        <EditText
                android:id="@+id/etEmailEntry"
                android:inputType="textEmailAddress"
                android:layout_width="239dp"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteY="619dp" tools:layout_editor_absoluteX="0dp">
        </EditText>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:id="@+id/linearLayout2">
        <TextView
                android:text="Введите пароль"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5" tools:layout_editor_absoluteY="252dp" tools:layout_editor_absoluteX="32dp">
        </TextView>
        <EditText
                android:id="@+id/etPasswordEntry"
                android:inputType="textPassword"
                android:layout_width="231dp"
                android:layout_height="wrap_content"
        >
        </EditText>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>