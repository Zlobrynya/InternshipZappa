<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent" android:background="@color/color_app">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="@string/phone_booking"
                    android:layout_width="169dp"
                    android:layout_height="45dp" android:id="@+id/booking_end_phone"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/booking_end_otmena"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="80dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="80dp" android:textColor="@color/white"
                    android:textSize="16sp" android:textAlignment="center"
            />
            <TextView
                    android:text="@string/otmena"
                    android:layout_width="302dp"
                    android:layout_height="45dp" android:id="@+id/booking_end_otmena"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/perezvon" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="50dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="50dp" android:textColor="@color/text_end_booking"
                    android:textSize="16sp" android:textAlignment="center"
                    app:layout_constraintHorizontal_bias="0.444"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/app_in_test"
                    android:textColor="@color/text_end_booking" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="276dp"
                    android:layout_marginEnd="40dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="40dp" android:textSize="12sp" android:textAlignment="center"
                    app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/izmena"
                    android:text="@string/app_in_test"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/izmena"
                    android:textColor="@color/text_end_booking" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="16dp" android:textSize="16sp" android:textAlignment="center"
                    app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/otmena"
            />
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/otmena"
                    android:textColor="@color/text_end_booking" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="28dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="16dp" android:textSize="16sp" android:textAlignment="center"
                    app:layout_constraintHorizontal_bias="1.0"/>
            <TextView
                    android:text="@string/perezvon"
                    android:layout_width="0dp"
                    android:layout_height="58dp" android:id="@+id/perezvon"
                    android:layout_marginTop="36dp"
                    app:layout_constraintTop_toBottomOf="@+id/izmena" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp" android:textColor="@color/text_end_booking"
                    android:textSize="16sp" android:textAlignment="center"
                    app:layout_constraintHorizontal_bias="1.0"/>
            <Button
                    android:text="@string/back"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/btn_back"
                    android:background="@drawable/btn_booking_end"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="14dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="14dp"
                    app:layout_constraintHorizontal_bias="0.483" android:textColor="@color/white"
                    android:layout_marginTop="19dp" app:layout_constraintTop_toBottomOf="@+id/app_in_test"
                    android:layout_marginBottom="10dp" app:layout_constraintBottom_toBottomOf="parent"/>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>