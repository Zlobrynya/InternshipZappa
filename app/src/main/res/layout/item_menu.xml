<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:layout_width="328dp"
            android:layout_height="208dp"
            android:id="@+id/dishCard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="23dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:scaleType="fitXY" android:layout_marginBottom="2dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.125" android:layout_marginTop="4dp">

        <ImageView
                android:layout_width="328dp"
                android:layout_height="216dp"
                android:id="@+id/imageView"
                android:background="@drawable/layout_bg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:scaleType="fitXY"  app:layout_constraintTop_toTopOf="parent"/>


        <FrameLayout
                android:layout_width="match_parent"
                android:background="@drawable/gradient"
                android:layout_gravity="bottom"
                android:layout_height="108dp">
            <TextView
                    android:id="@+id/nameDish"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_width="296dp"
                    android:layout_height="25dp"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>
            <TextView
                    android:id="@+id/shortDescDish"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="40dp"
                    android:layout_width="173dp"
                    android:textSize="14sp"
                    android:layout_height="34dp"
                    android:textColor="#99FFFFFF"
            />
            <TextView
                    android:id="@+id/priceDish"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="79dp"
                    android:layout_width="176dp"
                    android:layout_height="16dp"
                    android:textColor="@color/white"
            />
            <Button
                    android:text="ПОДРОБНЕЕ"
                    android:textColor="@color/white"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:background="@drawable/button_border"
                    android:layout_marginStart="192dp"
                    android:layout_marginTop="55dp"

            />
        </FrameLayout>
        <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar"
                android:layout_gravity="center"/>
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/card_border">
        </FrameLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>