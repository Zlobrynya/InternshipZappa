<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <ImageView
            android:layout_width="350dp"
            android:layout_height="130dp"
            android:id="@+id/imageView"
            android:background="@drawable/layout_bg"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/rog"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="23dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:scaleType="centerCrop" android:layout_marginBottom="2dp"/>
    <TextView
            android:text="TextView"
            android:paddingLeft="40dp"
            android:layout_width="350dp"
            android:layout_height="28dp"
            android:id="@+id/nameDish"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="23dp" android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            style="@style/textDish" android:textAlignment="textStart"
            app:layout_constraintVertical_bias="1.0" android:textStyle="italic" android:textAllCaps="false"/>
</android.support.constraint.ConstraintLayout>