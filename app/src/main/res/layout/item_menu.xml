<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:layout_width="328dp"
            android:layout_height="208dp"
            android:id="@+id/dishCard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="23dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:scaleType="fitXY" android:layout_marginBottom="2dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.125" android:layout_marginTop="4dp">
        <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:visibility="visible"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/imageView"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/nameDish"/>

        <com.zlobrynya.internshipzappa.tools.DishImageView
                android:layout_width="328dp"
                android:layout_height="208dp"
                android:id="@+id/imageView"
                android:background="@drawable/layout_bg"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@mipmap/rog"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:scaleType="fitXY"  app:layout_constraintTop_toTopOf="parent"/>

        <FrameLayout
                android:layout_width="match_parent"
                android:background="#B3212121"
                android:layout_gravity="bottom"
                android:layout_height="76dp">
            <TextView
                    android:id="@+id/nameDish"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_width="173dp"
                    android:layout_height="25dp"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>
            <TextView
                    android:id="@+id/shortDescDish"
                    android:text="краткое описание"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="32dp"
                    android:layout_width="146dp"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    android:textColor="#99FFFFFF"
            />
            <TextView
                    android:id="@+id/priceDish"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="52dp"
                    android:layout_width="52dp"
                    android:layout_height="16dp"
                    android:textColor="@color/white"
            />
            <Button
                    android:text="ПОДРОБНЕЕ"
                    android:textColor="@color/white"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:background="@drawable/button_border"
                    android:layout_marginStart="192dp"
                    android:layout_marginTop="18dp"

            />
        </FrameLayout>

    </android.support.v7.widget.CardView>
