<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="180dp"
                                             android:layout_height="245dp">

    <ImageView
            android:layout_width="152dp"
            android:layout_height="196dp" app:srcCompat="@drawable/rect_recom_dish"
            android:id="@+id/rectRecomDish"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="40dp" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>
    <ImageView
            android:scaleType="centerCrop"
            android:layout_width="0dp"
            android:layout_height="79dp" app:srcCompat="@drawable/noimage"
            android:id="@+id/topingPhoto"
            app:layout_constraintTop_toTopOf="@+id/rectRecomDish"
            app:layout_constraintStart_toStartOf="@+id/rectRecomDish"
            app:layout_constraintEnd_toEndOf="@+id/rectRecomDish" app:layout_constraintHorizontal_bias="0.0"
    />
    <TextView
            android:text="Медово-горчичный соус"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/topingName" android:layout_marginTop="6dp"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/topingPhoto"
            app:layout_constraintStart_toStartOf="@+id/rectRecomDish"
            app:layout_constraintEnd_toEndOf="@+id/rectRecomDish"
            android:textSize="12dp"
            android:textColor="#FFFFFF"/>
    <TextView
            android:text="40 Г"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:id="@+id/topingVes"
            android:textSize="10dp"
            android:textColor="#B2FFFFFF"
            app:layout_constraintTop_toBottomOf="@+id/topingName" app:layout_constraintStart_toStartOf="@+id/topingName"
            app:layout_constraintEnd_toEndOf="@+id/topingName" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp"/>
    <TextView
            android:text="50 Р"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/topingPrice"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="@+id/topingVes"
            app:layout_constraintTop_toBottomOf="@+id/topingVes" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/rectRecomDish"/>
    <Button
            android:padding="5dp"
            android:text="Топинг"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:layout_width="88dp"
            android:layout_height="26dp"
            android:id="@+id/btnToping" app:layout_constraintEnd_toEndOf="@+id/rectRecomDish"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/rectRecomDish" android:background="@drawable/btn_shape"/>
</android.support.constraint.ConstraintLayout>