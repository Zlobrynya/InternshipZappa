<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:background="#1F2022">
    <ScrollView
            android:id="@+id/scrollView2"
            android:scrollbars="none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#1F2022"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintHorizontal_bias="0.533">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" android:id="@+id/CS1">
            <ImageView
                    android:id="@+id/dishPhoto"
                    android:layout_height="260dp"
                    android:layout_width="401dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="628dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            >
            </ImageView>

            <ImageView
                    android:id="@+id/dishDescription"
                    android:layout_width="0dp"
                    android:layout_height="274dp"
                    android:background="@drawable/shape"
                    android:scaleType="centerInside"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="248dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="@id/CS1"
                    app:layout_constraintEnd_toEndOf="@id/CS1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_bias="0.483">
            </ImageView>
            <TextView
                    android:text="Бостон Лохи"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dishName"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toTopOf="@+id/dishDescription"
                    app:layout_constraintStart_toStartOf="@+id/dishDescription"
            />
            <TextView
                    android:text="Сливочный суп с копчёной форелью, морковью и картофелем."
                    android:id="@+id/dishOpisanie"
                    android:textSize="16sp"
                    android:textColor="#BCBCBC"
                    android:layout_width="340dp"
                    android:layout_height="104dp"
                    android:layout_marginTop="56dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="@+id/dishDescription"
                    app:layout_constraintEnd_toEndOf="@+id/dishDescription"
                    app:layout_constraintStart_toStartOf="@+id/dishName"
                    app:layout_constraintHorizontal_bias="0.34"/>
            <TextView
                    android:text="280 Г"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dishVes"
                    android:textSize="12sp"
                    android:textColor="#BCBCBC"
                    android:layout_marginLeft="28dp"
                    android:layout_marginBottom="96dp"
                    app:layout_constraintStart_toStartOf="@+id/dishDescription"
                    app:layout_constraintBottom_toBottomOf="@+id/dishDescription" android:layout_marginStart="28dp"/>
            <TextView
                    android:text="240 Р"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dishCena"
                    app:layout_constraintStart_toStartOf="@+id/dishDescription"
                    android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp"
                    app:layout_constraintBottom_toBottomOf="@+id/dishDescription"
                    android:layout_marginBottom="40dp"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"/>
            <Button
                    android:text="Отличный супчик"
                    android:fontFamily="Roboto"
                    android:textColor="#FFFFFF"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnOrderDish"
                    app:layout_constraintEnd_toEndOf="@+id/dishDescription"
                    android:textSize="20sp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="32dp"
                    app:layout_constraintBottom_toBottomOf="@+id/dishDescription"
                    android:background="@drawable/btn_shape"/>
            <android.support.v7.widget.RecyclerView
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/dishDescription" app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    android:background="#2D2E30" android:id="@+id/recyclerView"
                    app:layout_constraintHorizontal_bias="0.511">
            </android.support.v7.widget.RecyclerView>
            <TextView
                    android:text="К этому блюду рекомендуют"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView7"
                    app:layout_constraintStart_toStartOf="@+id/recyclerView"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="@+id/recyclerView"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" android:layout_marginLeft="16dp" android:layout_marginStart="16dp">
            </TextView>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
