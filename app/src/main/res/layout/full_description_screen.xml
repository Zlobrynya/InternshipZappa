<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:background="#1F2022">
    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                                       xmlns:app="http://schemas.android.com/apk/res-auto"
                                       android:id="@+id/toolbar"
                                       android:layout_width="match_parent"
                                       android:layout_height="?attr/actionBarSize"
                                       android:background="@drawable/background_toolbar_translucent"
                                       app:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                                       app:layout_constraintStart_toStartOf="parent"
                                       app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                                       app:layout_constraintTop_toTopOf="parent"/>
    <ScrollView
            android:id="@+id/scrollView2"
            android:scrollbars="none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#1F2022"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintHorizontal_bias="0.0"
            >
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" android:id="@+id/CS1">
            <ImageView
                    android:id="@+id/dishPhoto"
                    android:layout_height="274dp"
                    android:layout_width="0dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toTopOf="parent">
            </ImageView>

            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="274dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/shape" android:layout_marginTop="224dp"
                    app:layout_constraintTop_toTopOf="parent" android:id="@+id/constraintLayout">

                <TextView
                        android:text="Бостон Лохи"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dishName"
                        android:textSize="20sp"
                        android:textColor="#FFFFFF"
                        android:layout_marginStart="28dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                />
                <TextView
                        android:text="Сливочный суп с копчёной форелью, морковью и картофелем."
                        android:id="@+id/dishOpisanie"
                        android:textSize="16sp"
                        android:textColor="#BCBCBC"
                        android:layout_width="340dp"
                        android:layout_height="104dp"
                        android:layout_marginTop="64dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/dishName"
                        android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.363"/>
                <TextView
                        android:text="280 Г"
                        android:layout_width="wrap_content"
                        android:layout_height="14dp"
                        android:id="@+id/dishVes"
                        android:textSize="12sp"
                        android:textColor="#BCBCBC"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="28dp" android:layout_marginBottom="104dp"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                        android:text="240 Р"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dishCena"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="28dp"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp" android:layout_marginBottom="32dp"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                <Button
                        android:text="Отличный супчик"
                        android:fontFamily="Roboto"
                        android:textColor="#FFFFFF"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnOrderDish"
                        android:textSize="20sp"
                        android:background="@drawable/btn_shape"
                        android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginBottom="24dp" app:layout_constraintBottom_toBottomOf="parent"/>
            </android.support.constraint.ConstraintLayout>
            <android.support.v7.widget.RecyclerView
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:background="#2D2E30" android:id="@+id/recyclerView"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout" android:layout_marginTop="20dp">
            </android.support.v7.widget.RecyclerView>
            <TextView
                    android:text="К этому блюду рекомендуют"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView7"
                    app:layout_constraintStart_toStartOf="@+id/recyclerView"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="@+id/recyclerView"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" android:layout_marginLeft="16dp" android:layout_marginStart="16dp">
            </TextView>
            <ProgressBar
                    android:layout_width="92dp"
                    android:layout_height="82dp"
                    android:id="@+id/progressBar" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
                    android:progressDrawable="@color/colorAccent"/>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
