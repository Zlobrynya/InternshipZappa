<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegActivity">

    <TextView
            android:text="Регистрация"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="40dp"
            app:layout_constraintHorizontal_bias="0.463" android:id="@+id/textView6">
    </TextView>

    <TextView
            android:text="Введите E-mail"
            android:layout_marginTop="124dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="44dp" android:id="@+id/textView">
    </TextView>

    <EditText
            android:id="@+id/etEmailReg"
            android:inputType="textEmailAddress"
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="108dp"
            android:layout_marginRight="92dp" app:layout_constraintStart_toEndOf="@+id/textView"
            android:layout_marginStart="8dp">
    </EditText>

    <TextView
            android:text="Введите пароль"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="196dp"
            android:layout_marginStart="36dp" android:id="@+id/textView3">
    </TextView>

    <EditText
            android:id="@+id/etPasswordReg"
            android:inputType="textPassword"
            android:layout_width="200dp"
            android:layout_height="45dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="168dp" app:layout_constraintStart_toEndOf="@+id/textView3"
            android:layout_marginStart="8dp">
    </EditText>

    <TextView
            android:text="Повторите пароль"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="272dp" android:layout_marginStart="4dp"
            android:id="@+id/textView2">
    </TextView>

    <EditText
            android:id="@+id/etPhoneReg"
            android:inputType="textPassword"
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="256dp"
            android:layout_marginRight="112dp" app:layout_constraintStart_toEndOf="@+id/textView2"
            android:layout_marginStart="20dp">
    </EditText>

    <Button
            android:onClick="SavePerson"
            android:id="@+id/btnReg"
            android:text="Зарегистрироваться"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="328dp" android:layout_marginLeft="36dp"
            app:layout_constraintEnd_toStartOf="@+id/btnChangeEntry" android:layout_marginEnd="44dp">
    </Button>

    <Button
            android:onClick="ChangeActivityEntry"
            android:id="@+id/btnChangeEntry"
            android:text="Вход"
            android:layout_marginTop="328dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="248dp">
    </Button>
    <Button
            android:onClick="ShowPerson"
            android:text="Показать человека(убрать содержимое полей)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnReg" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>